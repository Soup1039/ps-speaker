---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText,
	imageClass
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('../public/images/about*.{jpeg,jpg,png,gif}')

if (imagePath) {
	if (!images[imagePath])
		throw new Error(`"${imagePath}" does not exist in glob: "public\images\about*.{jpeg,jpg,png,gif}"`)
}
---

<Tag
	class={[
  className,
  'relative rounded-2xl border border-border bg-primary-foreground px-5 py-3  hover:bg-teal-950/40 hover:shadow-xl/50',
  href ? 'transition-all hover:border-foreground/25 hover:shadow-sm' : ''
].join(' ')}
	href={href}
>
	{
		imagePath && (
			<Image
				src={images[imagePath]()}
				alt={altText}
				class={['mb-3 md:absolute md:mb-0',imageClass].join(' ')}
				loading='eager'
			/>
		)
	}
	<div class='flex flex-col gap-y-1.5'>
		<div class='flex flex-col gap-y-0.5'>
			<h5>{heading}</h5>
			<div class='flex flex-row justify-between'>
                <p>{subheading}<p>
			    <p>{date}</p>
            </div>
		</div>
		<slot />
	</div>
</Tag>