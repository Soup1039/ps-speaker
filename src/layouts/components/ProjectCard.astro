---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

const {
	as: Tag = 'div',
	class: className,
	href,
	heading,
	subheading,
	date,
	imagePath,
	altText,
	imageClass
} = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/*.{jpeg,jpg,png,gif}')

if (imagePath) {
	if (!images[imagePath])
		throw new Error(`"${imagePath}" does not exist in glob: "/src/assets/*.{jpeg,jpg,png,gif}"` + console.log(Object.keys(images)))
}
---

<Tag
    class={[
  className,
  'flex flex-col gap-y-3 rounded-2xl border border-border bg-primary-foreground hover:bg-teal-950/40 hover:shadow-xl/50',
		href && 'transition-all hover:border-foreground/25 hover:shadow-sm'
].join(' ')}

	href={href}
>
	{
  imagePath && (
    <Image
      src={images[imagePath]()}
      alt={altText}
      class='h-48 w-full rounded-2xl rounded-bl-none rounded-br-none object-cover'
      loading='eager'
    />
  )
}
	<div class='flex flex-col gap-y-0.5 px-5 py-4'>
		<h5>{heading}</h5>
		<p>{subheading}</p>
	</div>

	<slot />
</Tag>